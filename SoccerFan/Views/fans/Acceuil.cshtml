@model IEnumerable<ExamainFootball.player>

<head>
    <style>
        *,
        ::after,
        ::before {
            box-sizing: border-box;
        }

        body {
            scroll-behavior: smooth;
            text-rendering: optimizeSpeed;
            margin: 0;
            padding: 0;
            font: 400 1.8vh/1.5 "Poppins", sans-serif;
        }

        p {
            margin: 0;
            padding: 0;
        }

        img {
            display: block;
            border: 0;
            width: 100%;
            height: auto;
        }

        :root {
            --bordercolor: #ebeff2;
            --secondcolor: #2ed47a;
            --spancolor: #109cf1;
            --fWeight500: 500;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
        }

        /* grid */
        .wrapper {
            display: grid;
            grid-template-columns: 256px calc(100% - 256px);
            grid-template-rows: 60px calc(100% - 60px);
            gap: 0px 0px;
            height: 100vh;
            width: 100vw;
            grid-template-areas:
                "sidebar search "
                "sidebar main";
        }

        .search {
            grid-area: search;
            border-bottom: 1px solid var(--bordercolor);
        }

        .sidebar {
            grid-area: sidebar;
            height: 100vh;
            box-shadow: 6px 0 18px rgba(0, 0, 0, 0.06);
        }

        .main {
            grid-area: main;
            margin: 3vh; /*  22px */
            display: flex;
            flex-flow: row nowrap;
            gap: 30px;
            max-height: 90vh;
        }
        /* inside main */
        .first {
            flex: 2 1 55%;
            display: flex;
            flex-flow: column nowrap;
            order: 1;
            max-height: 90vh;
            box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.06), 0px 6px 18px rgba(0, 0, 0, 0.06);
        }

        .second {
            flex: 1 1 35%;
            flex-flow: column nowrap;
            order: 2;
            gap: 15px;
        }

        .container {
            padding: 2% 2.8%;
        }

        /* first block style */
        .task-calendar {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        /* task header style*/
        .taskhead {
            padding: 0 3% 2%;
        }

        .taskhead-header {
            flex-flow: row nowrap;
            align-items: center;
            height: 52px;
            position: relative;
            border-bottom: 4px solid var(--bordercolor);
        }

            .taskhead-header::before {
                border-bottom: 4px solid var(--secondcolor);
                position: absolute;
                width: 80%;
                top: 48px;
                content: "";
                left: 0;
            }

        .taskCopmlete {
            font-weight: var(--fWeight500);
        }

        .viewSelect {
            font-size: 12px;
        }

            .viewSelect::after {
                content: "\f0d7";
                font-family: FontAwesome;
                margin-left: 4px;
                color: #aeaeae;
            }

        .viewChose {
            color: var(--spancolor);
        }
        /* calendar style */
        .calendar > h3 {
            margin-bottom: 6%;
        }

        .dayblock {
            text-align: center;
            font-weight: var(--fWeight500);
            color: #334d6e;
        }

            .dayblock:first-child .dayN {
                background-color: var(--spancolor);
                border-radius: 50%;
                -webkit-border-radius: 50%;
                -moz-border-radius: 50%;
                -ms-border-radius: 50%;
                -o-border-radius: 50%;
                color: #fff;
            }

            .dayblock:nth-child(2) {
                color: var(--spancolor);
            }

            .dayblock:hover {
                color: var(--spancolor);
                cursor: pointer;
            }
        /* task-block and cards style */
        .task-block {
            border-top: 1px solid var(--bordercolor);
            padding: 3% 3.4% 2.5%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }

        .task-card {
            box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.06), 0px 6px 18px rgba(0, 0, 0, 0.06);
            display: flex;
            flex-flow: column nowrap;
            flex-basis: 30%;
            justify-content: space-around;
            padding: 0 2vh;
            margin-bottom: 3%;
        }

        .icon {
            position: absolute;
            left: 80%;
            display: none;
        }

        .task-card:hover .icon {
            display: block;
            cursor: pointer;
        }

        .task-header,
        .task-footer {
            display: flex;
            flex-flow: row nowrap;
            justify-content: space-between;
            align-items: center;
        }

        .task-footer {
            position: relative;
        }

        .task-header > h3 {
            font-size: 2vh;
            font-weight: var(--fWeight500);
            margin: 0;
        }

        .task-type {
            font-size: 1.7vh;
            font-weight: var(--fWeight500);
            color: #90a0b7;
        }

        .task-date {
            margin-top: -2vh;
        }

            .task-date > span {
                color: #4c5862;
            }

        .task-person-img {
            border-radius: 50%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            -ms-border-radius: 50%;
            -o-border-radius: 50%;
            width: 24px;
        }

        .task-person-name {
            color: #707683;
        }

        .task-status {
            color: #fff;
            font-size: 11px;
            text-align: center;
            width: 84px;
            height: 22px;
            padding: 3px 0;
            border-radius: 4px;
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            -ms-border-radius: 4px;
            -o-border-radius: 4px;
        }

        .complete {
            background-color: var(--secondcolor);
        }

        .ended {
            background-color: #f7685b;
        }

        .task-footer > figure {
            display: flex;
            flex-flow: row nowrap;
            align-items: center;
            margin: 0;
            padding: 0;
            gap: 12px;
        }

        .show-more > a {
            font-weight: 600;
            color: var(--spancolor);
            text-decoration: none;
        }

        .show-more {
            text-align: center;
        }
        /* second block style */
        .deals {
            box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.06), 0px 6px 18px rgba(0, 0, 0, 0.06);
            height: 50%;
            display: flex;
            flex-direction: column;
        }

        .task {
            height: 50%;
            box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.06), 0px 6px 18px rgba(0, 0, 0, 0.06);
        }

        .panelHeader {
            flex-flow: row nowrap;
            align-items: center;
            border-bottom: 1px solid var(--bordercolor);
            padding: 0 3%;
            height: 52px;
        }

            .panelHeader > h3 {
                margin: 0;
            }
        /* deals style */
        .deals-graph {
            padding: 3% 5% 0;
        }

        .graphtag {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            font-size: 1.4vh;
        }

            .graphtag > svg {
                margin-right: 8px;
            }

        .graph {
            margin: 10px 0;
        }

            .graph > img {
                margin: 0 auto;
                height: auto;
                width: 90%;
                object-fit: contain;
            }

        .task-graph {
            display: flex;
            /* height: 30vh; */
            flex-flow: row nowrap;
            align-items: center;
            justify-content: space-around;
            padding: 10px;
        }

            .task-graph > img {
                height: auto;
                width: 50%;
                object-fit: contain;
            }

        /* search style */
        .search-form {
            height: 100%;
            width: 100%;
            flex-direction: row;
            align-items: center;
            padding: 0 36px;
            position: relative;
            border-bottom: 1px solid var(--bordercolor);
        }

        label {
            display: block;
            width: 100%;
        }

        .search-input {
            border: none;
            flex-grow: 2;
            width: 100%;
            height: 60px;
            padding-left: 32px;
        }

            .search-input::placeholder {
                color: #90a0b7;
                font: 400 12px/1.4 "Poppins", sans-serif;
            }

            .search-input:focus-visible {
                outline: none;
            }

        button[type="submit"] {
            border: none;
            background-color: transparent;
            cursor: pointer;
            position: absolute;
            top: 20px;
            left: 36px;
            height: 20px;
            width: 20px;
            padding: 0;
            color: #c2cfe0;
        }

        .search-form > svg {
            cursor: pointer;
        }

        /* sidebar style */
        .header {
            padding: 0 1.6rem;
            border-bottom: 1px solid #ebeff2;
        }

            .header > h3 {
                font: 600 18px/1.3 "Open Sans", sans-serif;
                color: var(--spancolor);
            }

        .sidebar_inner {
            display: flex;
            flex-direction: column;
            position: relative;
            height: 90vh;
            padding: 0 1.3vw;
        }

        .person {
            margin: 24px 24px 40px 0;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .profileImg {
            display: block;
            border-radius: 50%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            -ms-border-radius: 50%;
            -o-border-radius: 50%;
            width: 46px;
        }

        .description {
            margin-left: 16px;
            display: inline-block;
        }

            .description .descriptionName {
                font-size: 1.8vh;
                font-weight: var(--fWeight500);
            }

            .description .descriptionMail {
                font-size: 1.4vh;
                color: #90a0b7;
            }

        ul {
            padding: 0;
        }

        li {
            list-style: none;
        }

        .nav-item {
            margin-bottom: 20px;
        }

            .nav-item:not(:first-child) > a {
                text-decoration: none;
                color: #334d6e;
            }

            .nav-item:first-child > a {
                text-decoration: none;
                color: var(--spancolor);
            }

            .nav-item > a:hover {
                color: var(--spancolor);
            }

        .menu-icon {
            display: flex;
            align-items: center;
        }

        .nav-label {
            margin-left: 14px;
            font-weight: var(--fWeight500);
        }

        .nav-item:last-child {
            padding-top: 24px;
            border-top: 1px solid var(--bordercolor);
        }

        .toggle {
            position: absolute;
            bottom: 0;
        }

        /* Media Queries*/
        @@media (max-width: 1130px) {
            .main {
                flex-flow: column;
                margin: 0;
                gap: 5px;
            }
        }

        @@media only screen and (max-width: 500px) {
            .wrapper {
                display: grid;
                width: 100vw;
                height: 100vh;
                grid-template-areas:
                    "search"
                    "main";
                grid-template-columns: 4fr;
                grid-template-rows: 60px 1fr;
            }

            .search {
                border: none;
            }

            .search-form {
                border: none;
            }

            .main {
                flex-flow: column;
                margin: 0;
                gap: 5px;
            }

            .sidebar {
                display: none;
            }

            .first {
                box-shadow: none;
            }

            .week {
                display: none;
            }

            .calendar > h3 {
                margin-bottom: 3%;
            }

            .icon {
                left: 60%;
            }

            .show-more {
                display: none;
            }

            .deals {
                box-shadow: none;
            }

            .task {
                box-shadow: none;
            }
        }
    </style>
</head>
<div class="wrapper">
    <!-- search starts -->
    <div class="search">
        <form class="search-form d-flex">
            <label>
                <button type="submit" class="searchButton"><i class="fa fa-search"></i></button>
            </label>


            <a style="text-decoration:none;color:black" href="/fans/logout"><span>LogOut</span></a>

        </form>
    </div>

    <aside class="sidebar">

        <div class="header">
            <h3>Dashboard</h3>
        </div>
        <!-- sidebar inner -->
        <div class="sidebar_inner">
            <!-- person block-->
            <div class="person">
                <img src="https://github.com/ShoshaTheTarnegolet/Dashboard-Project/blob/main/img/profile.png?raw=true" alt="profile_picture" class="profileImg" />
                <div class="description">
                    <span class="descriptionName">@ViewBag.message</span>

                </div>
            </div>
            <!-- navbar-->
            <nav class="navbar">
                <ul>
                    <li class="nav-item">
                        <a href="">
                            <div class="menu-icon">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
